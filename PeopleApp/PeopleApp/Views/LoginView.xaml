<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PeopleApp.Views.LoginView"
             Title="LoginView"
			 >
	<StackLayout Margin="20" Spacing="16">
		<Label Text="Login" HorizontalTextAlignment="Center" FontSize="32"></Label>
		<Entry Placeholder="Username" Text="{Binding Username}"></Entry>
		<Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}"></Entry>
		<Button Command="{Binding LoginCommand}" TextColor="White" Text="Login" BackgroundColor="Green"></Button>
	</StackLayout>
</ContentPage>